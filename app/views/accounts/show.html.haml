%table
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Contact Number
      %th Address
      %th Verified
      %th Verified at
  %tbody
    %tr
      %td{"data-label" => "First Name"}
        = @account.first_name
      %td{"data-label" => "Last Name"}
        = @account.last_name
      %td{"data-label" => "Contact Number"}
        = @account.contact_number
      %td{"data-label" => "Address"}
        = @account.address
      %td{"data-label" => "Verified"}
        = @account.verified
      %td{"data-label" => "Verified at"}
        = @account.verified_at

      %td{"data-label" => "Actions"}
        = link_to "Edit", edit_account_path(@account.id)
%br
= link_to "Back to Accounts", accounts_path

