.div.account-show-container
  %h1.account-show-header= "#{@account.first_name} #{@account.last_name}"
  %p.account-sub-show Account details
  %p.account-detail="First Name: #{@account.first_name}"
  %p.account-detail="Last Name: #{@account.last_name}"
  %p.account-detail="Contact Number: #{@account.contact_number}"
  %p.account-detail="Address: #{@account.address}"
  - if current_user.user_type == "Admin"
    %p.account-detail="Verification Status: #{@account.verified}"
    %p.account-detail="Verification Date: #{@account.verified_at}"
  
.div.account-button-show
  = link_to "Edit Account Details", edit_account_path(@account.id)
