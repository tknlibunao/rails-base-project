%table
  %thead
    %tr
      %th First Name 
      %th Last Name
      %th Contact Number
      %th Address
      %th Verified
      %th Verified at
      %th Created by
      %th Admin ID      
  %tbody
    %tr
      %td{"data-label" => "First Name"}
        = @buyer.first_name
      %td{"data-label" => "Last Name"}
        = @buyer.last_name    
      %td{"data-label" => "Contact Number"}
        = @buyer.contact_number
      %td{"data-label" => "Address"}
        = @buyer.address
      %td{"data-label" => "Verified"}
        = @buyer.verified
      %td{"data-label" => "Verified at"}
        = @buyer.verified_at    
      %td{"data-label" => "Created by"}
        = @buyer.created_by
      %td{"data-label" => "Admin ID"}
        = @buyer.admin_id

      %td{"data-label" => "Actions"} 
        = link_to "Edit", edit_buyer_path(@buyer.id)
%br
= link_to "Back to Buyers", buyers_path