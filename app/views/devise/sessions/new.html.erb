<div class="main-header">
  
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-container">
<div class="form-title">Log in</div>
  <div class="field">
    <%= f.label :email, :class => "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-field"  %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => "form-label" %>
    </div>
  <% end %>

  <div class="">
    <%= f.submit "Log in", :class => "actions" %>
  </div>
     <% if alert %>
      <div class="notice_wrapper">
      <p class="login-prompt"><%= alert %></p>
  </div>
    <% elsif notice %>
      <div class="notice_wrapper">
      <p class="login-prompt"><%= notice %></p>
  </div>
<% end %>
<p class="login-link"><%= render "devise/shared/links"%></p>
  </div>

<% end %>

