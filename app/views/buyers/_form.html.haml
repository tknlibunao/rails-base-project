= form_with model: @buyer do |f|
  = f.label :first_name
  = f.text_field :first_name
  
  %br/
  = f.label :last_name
  = f.text_field :last_name

  %br/

  = f.label :contact_number
  = f.telephone_field :contact_number

  %br/

  = f.label :address
  = f.text_area :address

  %br/
  = f.label :verified

  = f.radio_button :verified, "Yes", :value => 'true'
  = f.label "Yes"  
  = f.radio_button :verified, "No", :value => 'false'
  = f.label "No"
  
  %br/
  = f.label :verified_at
  = f.date_field :verified_at

  %br/

  = f.label :created_by
  = f.text_field :created_by

  %br/

  = f.label :admin_id
  = f.number_field :admin_id

  %br/
  %br/

  = f.submit

  %br/
  %br/
  
  = link_to "Back to Buyers", buyers_path